@model List<Tempofme.Models.Tbl_giftcode>
@{
    ViewBag.Title = "Quản lý gift code";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
    int i = 0;
}
@{
    if (TempData["errorgift"] != null)
    {
        <div class="alert alert-error" style="margin-top: 55px;">
            <h4><i class="fa fa-warning"> Lỗi!</i></h4>
            <i style="font-size: 14px;">@TempData["errorgift"]</i>
        </div>
    }
    if (TempData["successgift"] != null)
    {
        <div class="alert alert-success" style="margin-top: 55px;">
            <h4><i class="fa fa-warning"> Thành công!</i></h4>
            <i style="font-size: 14px;">@TempData["successgift"]</i>
        </div>
    }
}
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2> Danh sách mã quà tặng </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">No. </th>
                            <th class="column-title">ID item </th>
                            <th class="column-title">Mã quà </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            i++;
                            <tr class="even pointer">
                                <td class=" ">@i </td>
                                <td class=" ">@item.item_code</td>
                                <td class=" ">@item.gift_code</td>
                                <td class=" last">
                                    <a href="Deletegift?actiondelete=@item.item_id" style="color:red;" class="fa fa-times-circle"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Thêm mới một mã quà tặng</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br>
            @using (Html.BeginForm("Giftmanager", "Home", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
            {
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                        ID item <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBox("iditem", "", new { @class = "form-control col-md-7 col-xs-12", @placeholder = "Nhập ID item..." })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                        Tên mã gift <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.TextBox("giftcode", "", new { @class = "form-control col-md-7 col-xs-12", @id = "first-name", @placeholder = "Nhập tên vật phẩm..." })
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                        <button class="btn btn-primary">Hủy</button>
                        <button type="submit" class="btn btn-success">Thêm</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>