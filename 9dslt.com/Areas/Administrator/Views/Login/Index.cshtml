<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gentellela Alela! | </title>
    <link href="~/Areas/Administrator/vendors/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Areas/Administrator/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Administrator/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Areas/Administrator/vendors/nprogress/nprogress.css" rel="stylesheet">
    <link href="~/Areas/Administrator/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
    <link href="~/Areas/Administrator/vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet">
    <link href="~/Areas/Administrator/vendors/jqvmap/dist/jqvmap.min.css" rel="stylesheet" />
    <link href="~/Areas/Administrator/Content/css/custom.min.css" rel="stylesheet">
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        <h1>Quản trị viên</h1>
                        <div>
                            @Html.TextBox("username", "", new { @class = "form-control", @placeholder = "Tên người quản trị" })
                        </div>
                        <div>
                            @Html.Password("password", "", new { @class = "form-control", @placeholder = "Vui lòng nhập mật khẩu" })
                        </div>
                        <div>
                            <input type="submit" class="btn btn-default submit" value="Đăng nhập" />
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>
